@model IEnumerable<CarlosNalda.GreenFloydRecords.WebApp.ViewModels.ArtistViewModel>
@{
    ViewData["Title"] = "Artist Index";
}

<div class="container p-3">
    <div class="row">
        <div class="col-6">
            <h4 class="text-success">Artist List</h4>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Artist" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Artist
            </a>
        </div>
    </div>
    <br /><br />
    <div class="table-responsive-md">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Artist
                    </th>
                    <th>
                        Formed
                    </th>
                    <th>
                        Disbanded
                    </th>
                    <th />
                </tr>
            </thead>
            <tbody>
                @foreach (var artist in Model)
                {
                    <tr>
                        <td width="30%">
                            @artist.Id
                        </td>
                        <td width="30%">
                            @artist.Name
                        </td>
                        <td width="20%">
                            @artist.Formed?.ToShortDateString()
                        </td>
                        <td width="20%">
                            @artist.Disbanded?.ToShortDateString()
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Artist" asp-action="Edit" asp-route-id="@artist.Id"
                                   class="btn btn-success mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                                <a asp-controller="Artist" asp-action="Delete" asp-route-id="@artist.Id"
                                   class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>