@model IEnumerable<CarlosNalda.GreenFloydRecords.WebApp.Data.Genre>
@{
    ViewData["Title"] = "Genre Index";
}

<div class="container p-3">
    <div class="row">
        <div class="col-6">
            <h4 class="text-success">Category List</h4>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Genre" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
    <br /><br />
    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var genre in Model)
            {
                <tr>
                    <td width="50%">
                        @genre.Id
                    </td>
                    <td width="50%">
                        @genre.Name
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Genre" asp-action="Edit" asp-route-id="@genre.Id"
                               class="btn btn-success mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Genre" asp-action="Delete" asp-route-id="@genre.Id"
                               class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>