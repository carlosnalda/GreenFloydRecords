@*@model IEnumerable<CarlosNalda.GreenFloydRecords.Domain.Entities.Genre>*@
@model IEnumerable<CarlosNalda.GreenFloydRecords.WebApp.ViewModels.GenreViewModel>
@{
    ViewData["Title"] = "Genre Index";
}

<div class="container p-3">
    <div class="row">
        <div class="col-6">
            <h4 class="text-success">Genre List</h4>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Genre" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Genre
            </a>
        </div>
    </div>
    <br /><br />
    <div class="table-responsive-md">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Genre
                    </th>
                    <th />
                </tr>
            </thead>
            <tbody>
                @foreach (var genre in Model)
                {
                    <tr>
                        <td width="50%">
                            @genre.Id
                        </td>
                        <td width="50%">
                            @genre.Name
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Genre" asp-action="Edit" asp-route-id="@genre.Id"
                                   class="btn btn-success mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                                <a asp-controller="Genre" asp-action="Delete" asp-route-id="@genre.Id"
                                   class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>