@model CarlosNalda.GreenFloydRecords.WebApp.ViewModels.GenreViewModel
@{
    ViewData["Title"] = "Edit a genre";
}

<form method="post" asp-action="Edit">
    <div class="row m-1">
        <div class="col-md-6 order-md-1 border">
            <h4 class="text-success mt-2">Edit a Genre</h4>
            <div>
                <hr />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-success">Update</button>
                <a asp-controller="Genre" asp-action="Index" class="btn btn-secondary">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}